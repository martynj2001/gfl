<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<% if @post.attachments? %>
  <ul>
    <% @post.attachments.each do |attachment| %>
      <li style='list-style-type: none;'><%= link_to(image_tag(attachment.thumb.url, alt: 'Image'), attachment.url, target: '_blank') %></li>
    <% end %>
  </ul>
<% end %>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category_id %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
