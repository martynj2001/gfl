<div class = container>
    <h6 class="brand text-center m-auto p-3">Helping you and your famly live a more sustainable life.</h6>
    <%= render 'shared/category_src' %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <% if user_signed_in? %>
              <td><%= link_to 'Show', post, class:"btn btn-lg btn-primary btn-block" %></td>
              <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-lg btn-primary btn-block" %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-lg btn-primary btn-block" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>
<% if user_signed_in?%>
  <%= link_to 'New Post', new_post_path, class:"btn btn-lg btn-primary btn-block" %>
<% end %>
</div>