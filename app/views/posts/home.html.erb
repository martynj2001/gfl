<div class = container-fluid>

<div class="jumbotron p-3 p-md-5 text-dark rounded bg-light">
    <div class="row mb-2">
    <div class="col-lg-6 col-md-6 px-0 xs-text">
      <%= image_tag 'tree_lg_1.png', class: "img-fluid rounded mx-auto d-block"%>
      <h3 class="text-center brand" id="gfl_main_title">Greener . Family . Living </h3>
    </div>
    <div class="col-lg-6 col-md-6 px-0">
        <h4 class="lead my-3 text-center mx-auto pt-4">At Greener Family Living we aim to help you choose a more sustainable family life and help build the foundations of a more climate aware culture.</h4>
        <p class="lead my-3 text-center mx-auto font-italic">Browse our blog to follow our greener adventures, get some tips or read our product reviews.</p>
        <div class="row mb-2">
            <div class="col-lg-4 col-md-4 px-0">
            </div>
            <div class="col-lg-4 col-md-4 px-0">
                <%= link_to 'Blog', posts_path, class: "btn btn-sm btn-outline-success mx-auto d-block"%>
            </div>
            <div class="col-lg-4 col-md-4 px-0">
            </div>
        </div>
        
    </div>
  </div>


 <!-- Nil check required --> 
 <% unless @posts[0].nil? %>
  <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="row mb-2">
    <div class="col-lg-6 col-md-6 px-3">
      <h1 class="display-4 font-italic text-center"><%=@posts[0].title%></h1>
      <p class="lead my-3"><%=@posts[0].lead%></p>
      <p class="lead mb-0 text-center"><%=link_to 'Continue reading...', @posts[0], class:"text-white" %></p>
    </div>
    <div class="col-lg-6 col-md-6 px-0 text-center">
      <% if @posts[0].attachments? %>
          <%= image_tag(@posts[0].attachments[0].cover_full.url, alt: 'Image', class: 'img-fluid rounded mx-auto d-block')%>
      <% end %>
    </div>
  </div>
  </div>

  <div class="row mb-2">
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <strong class="d-inline-block mb-2 text-primary"><%= Category.find_by(id: @posts[1].category_id).name%></strong>
          <h3 class="mb-0">
            <%=link_to @posts[1].title, @posts[1], class:"text-dark" %>
          </h3>
          <div class="mb-1 text-muted"><%=@posts[1].created_at.strftime("%b %y")%></div>
          <p class="card-text mb-auto"><%=@posts[1].lead%></p>
          <p class="lead mb-0"><%=link_to 'Continue reading...', @posts[1], class: "text-dark"%></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <strong class="d-inline-block mb-2 text-success"><%= Category.find_by(id: @posts[2].category_id).name%></strong>
          <h3 class="mb-0">
            <%=link_to @posts[2].title, @posts[2], class:"text-dark" %>
          </h3>
          <div class="mb-1 text-muted"><%=@posts[2].created_at.strftime("%b %y")%></div>
          <p class="card-text mb-auto"><%=@posts[2].lead%></p>
          <p class="lead mb-0"><%=link_to 'Continue reading...', @posts[2], class: "text-dark"%></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <!-- Nil check required -->
  <div class="jumbotron p-3 p-md-5 text-dark rounded bg-light">
    <div class="row mb-2">
        <a class="twitter-timeline" data-height="450" data-theme="dark" data-link-color="#19CF86" href="https://twitter.com/FamilyGreener?ref_src=twsrc%5Etfw">Tweets by FamilyGreener</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
  </div>
</div>
